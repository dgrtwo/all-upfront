---
interface Props {
  quote: string;
  name: string;
  title: string;
  company: string;
  image: string;
}

const { quote, name, title, company, image } = Astro.props;
---

<div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
  <blockquote class="text-brand-gray italic mb-6">
    "{quote}"
  </blockquote>
  <div class="flex items-center gap-4">
    <img
      src={image}
      alt={name}
      class="w-12 h-12 rounded-full object-cover"
    />
    <div>
      <p class="font-semibold text-brand-navy">{name}</p>
      <p class="text-sm text-brand-gray">{title}, {company}</p>
    </div>
  </div>
</div>
