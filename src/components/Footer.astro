      </div>

      <!-- Legal -->
      <div>
        <h3 class="text-xs font-semibold text-brand-navy uppercase tracking-wider mb-4">Legal</h3>
        <ul class="space-y-2">
          {footerLinks.legal.map(link => (
            <li>
              <a href={link.href} class="text-sm text-brand-gray hover:text-brand-teal transition-colors">
