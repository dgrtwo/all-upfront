        <ul class="space-y-2">
          {footerLinks.company.map(link => (
            <li>
              <a href={link.href} class="text-sm text-brand-gray hover:text-brand-teal transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Case Studies -->
      <div>
        <h3 class="text-xs font-semibold text-brand-navy uppercase tracking-wider mb-4">Case Studies</h3>
