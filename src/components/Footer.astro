        <ul class="space-y-2">
          {footerLinks.whoWeServe.map(link => (
            <li>
              <a href={link.href} class="text-sm text-brand-gray hover:text-brand-teal transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div class="mt-12 pt-8 border-t border-gray-100">
      <p class="text-sm text-brand-gray text-center">
