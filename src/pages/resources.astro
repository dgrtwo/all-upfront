---
import Layout from '../layouts/Layout.astro';
import CTABanner from '../components/CTABanner.astro';

const resources = [
  {
    category: 'Case Study',
    title: 'Behind North Carolina\'s New Data Platform Powered by Upfront',
    href: '/resources/north-carolina-upfront',
  },
  {
    category: 'Case Study',
    title: 'Denver Preschool Program Launches New Application and Online Search',
    href: '/resources/dpplaunch',
  },
  {
    category: 'Press',
    title: 'Childcare Databases in The Washington Post',
    href: '/resources/washpo',
  },
  {
    category: 'Policy',
    title: 'Navigating the Post-ARPA Era in Early Childhood Education Through Data-Driven Decision Making',
    href: '/resources/post-arpa-era',
  },
  {
    category: 'Families',
    title: 'ECE Search: What Modern Families Want',
    href: '/resources/ece-search-what-modern-families-want',
  },
  {
    category: 'Policy',
    title: 'Recommendations by the Office of Child Care: The Future of Data',
    href: '/resources/ccdf-data-changes',
  },
];

const categoryColors: Record<string, string> = {
  'Case Study': 'bg-brand-teal/10 text-brand-teal',
  'Press': 'bg-purple-100 text-purple-700',
  'Policy': 'bg-brand-orange/10 text-brand-orange',
  'Families': 'bg-green-100 text-green-700',
};
---

<Layout title="Resources | Upfront" description="Articles, case studies, and insights on modernizing early childhood education data.">
  <!-- Hero -->
  <section class="py-16 md:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-brand-navy">Modernizing ECE</h1>
      <p class="mt-4 text-lg text-brand-gray max-w-2xl mx-auto">
        Articles, case studies, and insights on transforming early childhood education through better data.
      </p>
    </div>
  </section>

  <!-- Resources Grid -->
  <section class="py-8 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid gap-6">
        {resources.map((resource) => (
          <a
            href={resource.href}
            class="group block bg-white border border-gray-100 rounded-xl p-6 hover:shadow-lg hover:border-brand-teal/20 transition-all"
          >
            <div class="flex items-start justify-between gap-4">
              <div class="flex-1">
                <span class={`inline-block text-xs font-semibold uppercase tracking-wider px-3 py-1 rounded-full mb-3 ${categoryColors[resource.category] || 'bg-gray-100 text-gray-700'}`}>
                  {resource.category}
                </span>
                <h2 class="text-xl font-semibold text-brand-navy group-hover:text-brand-teal transition-colors">
                  {resource.title}
                </h2>
              </div>
              <svg class="w-5 h-5 text-brand-teal flex-shrink-0 mt-1 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <CTABanner />
</Layout>
